<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arran.majorsdetermination.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_2"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/custom_background_transparan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


<!--Header-->
    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/md_logo"
            android:scaleType="centerCrop"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/datadiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/header">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Diri"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="20dp"
                android:textSize="30sp"/>
        </LinearLayout>

    <!--Content-->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datadiri"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp">


        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/etUsername"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:hint="Nama"
            android:drawableLeft="@drawable/username"
            android:singleLine="true" />


    </LinearLayout>

    <!--Prestasi-->

    <LinearLayout
        android:id="@+id/layout_prestasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/content">

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/etPrestasi"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:hint="Prestasi"
            android:drawableLeft="@drawable/prestasi"
            android:singleLine="true"/>


    </LinearLayout>


    <!--Jurusan-->
    <LinearLayout
        android:id="@+id/layout_jurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@+id/layout_prestasi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:id="@+id/spinnerJurusan"
            android:prompt="@string/spinner_title"
            android:dropDownSelector="?android:attr/listChoiceIndicatorSingle"
            android:popupBackground="@color/background" />


    </LinearLayout>


    <!--hobi-->
    <LinearLayout
        android:id="@+id/layout_hobi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/layout_jurusan">

        <Spinner
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:id="@+id/spinnerHobi"
            android:spinnerMode="dropdown"
            android:prompt="@string/spinner_title"
            android:popupBackground="@color/background"/>


    </LinearLayout>

    <!--Footer-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <Button
            android:text="Submit"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btSubmit"
            android:textSize="17sp"/>
    </LinearLayout>

</RelativeLayout>